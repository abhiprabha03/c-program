#include <stdio.h>

int main() {
    int num, factorial = 1, i = 1;

    // Ask the user to enter a number
    printf("Enter a positive integer: ");
    scanf("%d", &num);

    // Calculate the factorial using a while loop
    while (i <= num) {
        factorial *= i;
        i++;
    }

    // Print the result
    printf("The factorial of %d is %d.\n", num, factorial);

    return 0;
}
